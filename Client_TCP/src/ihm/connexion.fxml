<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane minHeight="400.0" minWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ihm.ConnexionController">
   <children>
      <VBox alignment="CENTER" spacing="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
         <children>
            <Label text="Connexion :">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <VBox>
               <children>
                  <Label text="Identifiant">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="identifiant" />
                  <Label text="Mot de passe :">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="password" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onMouseClicked="#connexion" text="Se connecter">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label fx:id="erreure" text="L'identiant ou le mot de passe n'est pas corrcet" textFill="RED" visible="false" />
         </children>
      </VBox>
   </children>
</AnchorPane>
